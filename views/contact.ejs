<!-- content -->
<div class="container">
  <div class="row mt-4">
    <div class="col">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Contact</a>
      <!-- tables -->

      <!-- alert -->
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <!-- <th scope="col">No. HP</th> -->
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length<1) { %>
          <!-- alert -->
          <div class="alert alert-danger" role="alert">
            Data Contact Kosong.
          </div>
          <% } else { %> <% contacts.forEach((contact, i )=> { i++ %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= contact.nama %></td>
            <!-- <td><%= contact.nomer %></td> -->
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> Details</a
              >
            </td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
